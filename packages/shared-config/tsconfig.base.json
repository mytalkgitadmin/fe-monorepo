{
  "compilerOptions": {
    // 🎯 타겟 환경 설정
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    // 📦 모듈 해석 설정
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // 🔍 엄격한 타입 검사
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // 📁 경로 별칭 설정 (각 앱에서 확장해서 사용)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  
  // 🚫 제외할 폴더들
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.config.js",
    "*.config.ts"
  ]
}
